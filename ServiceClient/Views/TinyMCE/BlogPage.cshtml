@model IEnumerable<ServiceClient.Models.BlogModel>

@{
    ViewBag.Title = "BlogPage";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Blog Page</h2>

<p>
    @if (@Session["UserName"] != null)
    {
        @Html.ActionLink("Write your own Blog", "Index", "TinyMCE")
    }
</p>
<table class="table" style="font-family:PacificRegular">

    @foreach (var item in Model)
    {
        <tr>
            <td style="font-family:PacificRegular">@Html.DisplayFor(modelItem => item.Title)  By: @Html.DisplayFor(modelItem => item.Author) </td>
        </tr>
        <tr><td><br /></td></tr>
        <tr>
            <td style="font-family:PacificRegular">@Html.DisplayFor(modelItem => item.IntroWords)</td>
        </tr>
        <tr>
            <td style="font-family:PacificRegular">@Html.ActionLink("Read More...", "BlogDetails", new { Title = item.Title })</td>
        </tr>

        <tr style="border-bottom: 1px solid #000;"><td style="border-bottom: 1px solid #000;"><hr style="border-bottom: 1px solid #000;" /></td></tr>
        <tr><td><br /><br /></td></tr>
    }

</table>

